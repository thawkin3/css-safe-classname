{
  "name": "css-safe-classname",
  "version": "0.1.0",
  "description": "Utility methods for creating and validating safe CSS classnames from string input",
  "main": "dist/main.cjs.min.js",
  "module": "dist/main.esm.min.js",
  "browser": "dist/main.umd.min.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thawkin3/css-safe-classname.git"
  },
  "keywords": [
    "class",
    "classname",
    "css",
    "safe css classname",
    "string",
    "valid css classname"
  ],
  "author": "Tyler Hawkins (http://tylerhawkins.info)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thawkin3/css-safe-classname/issues"
  },
  "homepage": "https://github.com/thawkin3/css-safe-classname",
  "scripts": {
    "build": "NODE_ENV=production rollup --config",
    "cz": "git-cz",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint": "run-p eslint prettier",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "prettier-watch": "onchange \"**/*.{js,jsx,ts,tsx,md}\" -- prettier --write {{changed}}",
    "release": "standard-version",
    "test": "NODE_ENV=test jest",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.10.0",
    "@babel/preset-env": "^7.10.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "rollup": "^2.10.9",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-delete": "^1.2.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^6.1.0",
    "standard-version": "^8.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
